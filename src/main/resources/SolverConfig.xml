<?xml version="1.0" encoding="UTF-8"?>
<solver xmlns="https://timefold.ai/xsd/solver" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="https://timefold.ai/xsd/solver https://timefold.ai/xsd/solver/solver.xsd">
    <environmentMode>REPRODUCIBLE</environmentMode>
    <!-- Define the model -->
    <solutionClass>org.example.domain.RoutingSolution</solutionClass>
    <entityClass>org.example.domain.Doctor</entityClass>
    <entityClass>org.example.domain.Visit</entityClass>

    <!-- Define the score function -->
    <scoreDirectorFactory>
        <constraintProviderClass>org.example.solver.StreamCalculator</constraintProviderClass>
    </scoreDirectorFactory>

    <!-- Configure the optimization algorithms (optional) -->
    <termination>
        <secondsSpentLimit>10</secondsSpentLimit>
    </termination>

    <constructionHeuristic />

    <localSearch>
        <acceptor>
            <valueTabuSize>2</valueTabuSize> <!-- value = Klienti, entity = Arsti -->
        </acceptor>
        <forager>
            <acceptedCountLimit>10</acceptedCountLimit>
        </forager>
    </localSearch>
</solver>